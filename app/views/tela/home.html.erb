<div class="container">
  <h1><%= @rodada.descricao %></h1>

  <h3 style="padding: 8px; color: <%= @rodada.inscricao_guest ? "green" : "red" %>; border: 1px solid;">
    O sistema está <%= @rodada.inscricao_guest ? "aberto" : "fechado" %> para inscrições.
  </h3>

  <h2>Consultar posição na fila</h2>

  <form id="form-consultar">
    <p>
      Matrícula:
      <input type="number" name="matricula" id="matricula" autofocus="autofocus" size="12">
      <input type="submit" name="" value="Consultar">
    </p>
  </form>

  <h2>Links</h2>

  <div class="links">
    <p><%= link_to 'Acompanhar telão', tela_path %></p>
    <p><%= link_to 'Inscrever-se', inscricao_path %></p>
    <p><%= link_to 'Ver   filas', '/tela/visualizar-filas' %></p>
  </div>
</div>

<script type="text/javascript">
  $("#form-consultar").on("submit", function() {
    var matricula = $("#matricula").val();
    window.location.href = "<%= root_path %>posicao/" + matricula;
    return false;
  });
</script>
